doctype 5
html
    head
        title= title
        link(rel='stylesheet', href='/cucumber/stylesheets/style.css')
    body
        .cucumber
        each feature in features
            script(type='text/x-gherkin')= feature
        p.actions
            | test
            | &nbsp;
            button#run run
            | &nbsp;

        #output.cucumber-report
        #errors-container
            pre#errors
        iframe(id='app-under-test', src="/")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js")
        script(src="/cucumber/javascripts/cucumber.js")
        script(src="/cucumber/javascripts/support.js")
        script(src="/cucumber/javascripts/runner.js")


